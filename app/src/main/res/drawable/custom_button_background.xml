        <shape android:shape="rectangle">
            <solid android:color="#B3E660" /> <!-- Background color when button is pressed -->
            <corners android:radius="8dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#B3E660" /> <!-- Default background color -->
            <corners android:radius="8dp" />
        </shape>
    </item>
</selector>
