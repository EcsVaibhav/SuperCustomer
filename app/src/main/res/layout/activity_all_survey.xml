<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Business.AllCoupons"
    tools:ignore="HardcodedText">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/All_survey_rvl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/HRL"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/emanim"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/HRL"
        android:visibility="invisible"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/emety" />

    <RelativeLayout
        android:id="@+id/HRL"
        android:layout_width="match_parent"
        android:layout_height="56dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/fixcolor"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/AS_back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:layout_marginLeft="10dp"
                android:background="?attr/actionModeCloseDrawable"
                android:backgroundTint="@color/white" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="On Going Survey"
                android:textColor="@color/white"
                android:textSize="24sp" />

        </LinearLayout>

    </RelativeLayout>

    <ProgressBar
        android:id="@+id/PB_AllSurvey"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

</RelativeLayout>